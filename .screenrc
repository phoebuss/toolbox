startup_message off
vbell off
altscreen on
autodetach on
defscrollback 100000
scrollback 100000
defutf8 on
#termcapinfo xterm* 'ti@:te@:hs:ts=\E]0;:fs=\007:ds=\E]0;\007'
#term xterm-256color

# use mouse to select regions
#defmousetrack on
#mousetrack on

# caption customization

hardstatus alwayslastline
# pre 5.0
#hardstatus string "%{= kG}%{g}[%{G}$USER@%H%{g}][%{Y}%S%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{B}%m/%d %{W}%C%A%{g}]"

# post 5.0
hardstatus string "%{=2;0}[%{+10;0}$USER@%H%{-}][%{+11;0}%S%{-}][%-=%{=7;0} %-w%{+b 0;3}> %n %t%?(%u)%? <%{-}%+w %= %{-}][%m/%d %C:%A]"
hardstatus string "%{=2;0}[%{+10;0}$USER@%H%{-}][%{+11;0}%S%{-}][%-=%{7;0} %-w%{+b 0;11}> %n %t <%{-}%+w %= %{-}][%{4;0}%m/%d %{7;0}%C %A%{2;0}]"

layout autosave on
layout new one

# ** Key Binding **
# disable xoff
bind s split
bind t title

bind h focus left
bind j focus down
bind k focus up
bind l focus right

# navigating regions with Ctrl-arrows
bindkey "^[[1;5D" focus left
bindkey "^[[1;5C" focus right
bindkey "^[[1;5A" focus up
bindkey "^[[1;5B" focus down

# F2 puts Screen into resize mode. Resize regions using hjkl keys.
bindkey "^[OQ" eval "command -c rsz" # enter resize mode
# # use hjkl keys to resize regions
bind -c rsz h eval "resize -h -5" "command -c rsz"
bind -c rsz j eval "resize -v -5" "command -c rsz"
bind -c rsz k eval "resize -v +5" "command -c rsz"
bind -c rsz l eval "resize -h +5" "command -c rsz"

bindkey "^[[5;5~" prev                  # ctrl + PgUp : previous window
bindkey "^[[6;5~" next                  # ctrl + PgDn : next window

bind ^c stuff "screen -X chdir \$PWD; screen ^M"
